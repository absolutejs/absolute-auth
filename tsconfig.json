{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"declaration": true,
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"types": ["bun-types"],
		"rootDir": "src",
		"outDir": "dist",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"declarationMap": true,
		"outFile": "dist/index.d.ts"
	},
	"include": ["src"]
}
