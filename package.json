{
	"version": "0.3.0",
	"name": "absolute-auth",
	"description": "An authorization library for absolutejs",
	"repository": {
		"type": "git",
		"url": "https://github.com/alexkahndev/absolute-auth.git"
	},
	"main": "dist/index.js",
	"license": "CC BY-NC 4.0",
	"author": "Alex Kahn",
	"scripts": {
		"build": "bun build src/index.ts --outdir dist --minify --splitting && tsc --emitDeclarationOnly --project tsconfig.dts.json",
		"test": "echo \"Error: no test specified\" && exit 1",
		"format": "prettier --write \"./**/*.{js,jsx,ts,tsx,css,json}\"",
		"dev": "bun run --watch example/server.ts",
		"db:generate": "drizzle-kit generate --schema ./example/db/schema.ts --dialect postgresql",
		"db:migrate": "bun run ./example/db/migrate.ts",
		"db:studio": "drizzle-kit studio"
	},
	"keywords": [
		"authorization",
		"authentication",
		"absolutejs",
		"elysia",
		"oauth"
	],
	"types": "dist/index.d.ts",
	"dependencies": {
		"arctic": "3.0.0",
		"elysia": "1.2.9"
	},
	"devDependencies": {
		"@elysiajs/static": "1.2.0",
		"@neondatabase/serverless": "0.10.4",
		"@types/bun": "1.1.14",
		"@types/react": "19.0.2",
		"@types/react-dom": "19.0.2",
		"drizzle-kit": "0.28.0",
		"drizzle-orm": "0.36.1",
		"prettier": "3.4.2",
		"react": "19.0.0",
		"react-dom": "19.0.0",
		"tsup": "8.3.5",
		"typescript": "^5.7.2"
	},
	"module": "dist/index.js"
}
